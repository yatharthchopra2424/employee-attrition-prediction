# Get your free API key from: https://build.nvidia.com/

# NVIDIA API Configuration
NVIDIA_API_KEY=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

# Alternative: You can also set this in your system environment variables
# On Windows PowerShell: $env:NVIDIA_API_KEY="your_key_here"
# On Windows CMD: set NVIDIA_API_KEY=your_key_here
# On Linux/Mac: export NVIDIA_API_KEY="your_key_here"

# =============================================================================
# Model Configuration (Optional - defaults are optimized)
# =============================================================================

# Model name (don't change unless NVIDIA releases new models)
NVIDIA_MODEL_NAME=nvidia/llama-3.3-nemotron-super-49b-v1.5

# Model parameters (adjust for different response styles)
NVIDIA_TEMPERATURE=0.6          # 0.0-1.0: Lower = more focused, Higher = more creative
NVIDIA_TOP_P=0.95               # 0.0-1.0: Nucleus sampling
NVIDIA_MAX_TOKENS=65536         # Maximum response length

# =============================================================================
# ML Model Configuration
# =============================================================================

# Paths to ML resources
MODEL_PATH=models/attrition_model.pkl
DATA_PATH=raw_data/employee_attrition_dataset.csv

# Risk threshold for predictions
RISK_THRESHOLD_HIGH=0.7         # >= 70% = High Risk
RISK_THRESHOLD_MEDIUM=0.4       # >= 40% = Medium Risk

# =============================================================================
# Chatbot Behavior
# =============================================================================

# Auto-predict when employee ID mentioned
AUTO_PREDICT=true

# Number of conversation messages to keep in context
CONTEXT_HISTORY_LENGTH=10

# Save conversation history automatically
AUTO_SAVE_CONVERSATIONS=true

# =============================================================================
# Advanced Settings (for developers)
# =============================================================================

# Enable debug mode
DEBUG_MODE=false

# Log all API calls
LOG_API_CALLS=false

# Custom system prompt file (optional)
# CUSTOM_SYSTEM_PROMPT_FILE=custom_prompt.txt
